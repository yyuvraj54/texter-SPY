<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <Button
                android:id="@+id/AboutButton"
                android:layout_width="125dp"
                android:layout_height="50dp"
                android:layout_gravity="right"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:drawableLeft="@android:drawable/ic_dialog_info"
                android:scrollbarAlwaysDrawHorizontalTrack="false"
                android:text="About" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="136dp"
                android:layout_height="190dp"
                app:srcCompat="@drawable/texterlogo" />

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="344dp"
                android:layout_height="186dp"
                android:layout_marginBottom="170dp"
                android:gravity="center"

                android:orientation="vertical">


                <EditText
                    android:id="@+id/phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/entry"
                    android:ems="10"
                    android:fontFamily="@font/alfa_slab_one"
                    android:hint="Phone"
                    android:inputType="number"
                    android:maxLength="10"
                    android:minHeight="48dp"
                    android:paddingLeft="15dp" />

                <Button
                    android:id="@+id/next"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="25dp"
                    android:fontFamily="@font/alfa_slab_one"
                    android:text="Next" />

            </LinearLayout>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="> Allow all permission to run the application \n> Make sure you are connected to internet" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="368dp"
                android:layout_height="48dp"
                android:layout_marginTop="10dp"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:text="Texter app is build with high security and with great privacy \nDesign and Developed by Yuvraj Singh Yadav\n@All Right Reserved"
                android:textSize="10sp" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>